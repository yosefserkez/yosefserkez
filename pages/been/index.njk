{% extends "_includes/default.njk" %}
{% from 'components/linkTags.njk' import linkTags %}
{% set title="Oh the places I've been" %}
{% block content %}
  <p class="text-gray-400 text-sm" aria="About">
    üè° I live there now. üè† I lived there for a while. ‚úÖ I've visited.
  </p>
  <p class="text-gray-400 text-sm mt-2" aria="About">
    Try it for yourself! Check off the places you've been and see the counts update.
  </p>
  <form id="placesForm" class="mx-auto my-4">
    {% for label, place in places %}
      {% set visited_count = 0 %}
      {% for name, visited in place %}
        {% if visited %}
          {% set visited_count = visited_count + 1 %}
        {% endif %}
      {% endfor %}
      {% set total_count = place | length %}
      <h2 class="font-bold my-3 border-b border-gray-200 pb-2">
        {{ label | replace("_", " ") | title }}
        <span class="text-gray-400 font-normal">(<span id="{{ label }}_count">{{ visited_count }}</span>
          / {{ total_count }})</span>
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2">
        {% for name, visited in place %}
          <div class="flex items-center">
            <input type="checkbox" id="{{ label }}_{{ name | slug }}" name="{{ label }}_{{ name | slug }}" {% if visited %} checked {% endif %} data-label="{{ label }}" class="mr-2 place-checkbox">
              <label for="{{ label }}_{{ name | slug }}" class="{% if visited %}text-black{% else %}text-gray-200{% endif %}">
                {{ name }}
                <span class="place-emoji ml-1">
                  {% if visited == 'home' %}üè° {% elif visited == 'lived' %}üè† {% elif visited %}‚úÖ
                  {% endif %}
                </span>
              </label>
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    </form>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('placesForm');
        const checkboxes = form.querySelectorAll('.place-checkbox');
        checkboxes.forEach(checkbox => {
          checkbox.addEventListener('change', function () {
            const label = this.dataset.label;
            const countElement = document.getElementById (`${label}_count`);
            const currentCount = parseInt(countElement.textContent);
            if (this.checked) {
              countElement.textContent = currentCount + 1;
            } else {
              countElement.textContent = currentCount - 1;
            }
          });
        });
      });
    </script>
    <style>
      .place-checkbox:checked + label {
        color: black;
        opacity: 1;
      }
      .place-checkbox:not(:checked) + label {
        color: gray;
        opacity: 0.5;
      }
      .place-checkbox:checked + label .place-emoji {
        opacity: 1;
      }
      .place-checkbox:not(:checked) + label .place-emoji {
        opacity: 0.5;
      }
    </style>
  {% endblock %}