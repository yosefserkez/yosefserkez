<ol
    class="grid gap-x-2 grid-flow-col auto-cols-max	overflow-scroll mt-2 ">
    {# <span class="italic font-mono opacity-30">ðŸš§ Under construction ðŸš§</span> #}
    {%- for post in collections.project -%}
        <div class="p-2 rounded border w-60 text-md hover:border-gray-300 {% if post.data.highlight %}border-green-400
                hover:border-green-500 shadow-lg shadow-green-400/50{% endif %}{% if post.data.depreciated %} {% endif %}">
            <div class="flex flex-col ">
                <div
                    class="flex justify-between items-center">{# <div class="text-xs text-gray-600">{{ post.date | date ("YYYY") }}</div> #}
                </div>
                <div class="flex items-center gap-2">
                    {% if post.data.logo %}
                        <img src="{{ post.data.logo }}" alt="{{ post.data.title }} logo" class="w-6 h-6 object-contain">
                        {% endif %}
                        <h1 class="font-bold text-xl">{{ post.data.title }}</h1>
                        {% if post.data.depreciated %}
                            <span class="text-xs bg-orange-100 text-orange-800 px-2  rounded-full">DEPRECATED</span>
                        {% endif %}
                    </div>
                    <div class="flex my-2">
                        {% if post.data.url %}
                            <a target="_blank" href={{ post.data.url }} class="text-sm rounded-lg bg-gray-100 hover:bg-gray-200  px-2 mr-2 w-8 h-8 items-center">
                                <img class="w-full h-full m-auto" src="{{ relative_prefix }}/assets/icons/link.svg"/>
                            </a>
                        {% endif %}
                        {% if post.data.github %}
                            <a target="_blank" href={{ post.data.github }} class="text-sm rounded-lg bg-gray-100 hover:bg-gray-200 px-2 mr-2 w-8 h-8 items-center">
                                <img class="w-full h-full m-auto" src="{{ relative_prefix }}/assets/icons/github.svg"/>
                            </a>
                        {% endif %}
                    </div>
                    <div class="text-xs py-2">{{ post.data.description }}</div>
                </div>
            </div>
        {%- endfor -%}
    </ol>