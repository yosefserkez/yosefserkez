<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      {% block title %}
        {{ title }}
      {% endblock %}
    </title>
    <meta charset="UTF-8"/>
    {% if description %}
      <meta name="description" content="{{ description }}"/>
    {% endif %}
    <meta http-equiv="x-ua-compatible" content="ie=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover"/>
    {# --- Social and favicon metadata --- #}
    {% set siteUrl = "https://yosefserkez.me" %}
    {% set pageTitle = title or "Yosef Serkez" %}
    {% set pageDescription = description or "Yosef Serkez â€” builder, technologist, and long-walk enjoyer." %}
    {% set ogImage = siteUrl + "/assets/photos/yosef.jpg" %}

    <link rel="icon" href="/assets/photos/yosef.jpg"/>
    <link rel="apple-touch-icon" href="/assets/photos/yosef.jpg"/>
    <meta name="theme-color" content="#ffffff"/>

    <meta property="og:title" content="{{ pageTitle }}"/>
    <meta property="og:description" content="{{ pageDescription }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="{{ siteUrl }}"/>
    <meta property="og:image" content="{{ ogImage }}"/>
    <meta property="og:image:alt" content="Portrait of Yosef Serkez"/>

    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:site" content="@yosefserkez"/>
    <meta name="twitter:creator" content="@yosefserkez"/>
    <meta name="twitter:title" content="{{ pageTitle }}"/>
    <meta name="twitter:description" content="{{ pageDescription }}"/>
    <meta name="twitter:image" content="{{ ogImage }}"/>
    <link rel="stylesheet" href="/style.css?v={% version %}"/> {% block head %}{% endblock %}
    <script defer src="/js/alpine.js?v={% version %}"></script>
  </head>
  <body class="min-h-screen flex flex-col">
    <div class="flex-1 mx-8">
      {% include "_includes/components/navbar.njk" %}
      <div class="text-gray-800 tracking-widest">
        {{ title }}
      </div>
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </div>
  </body>
</html>